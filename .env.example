# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Output format (txt, srt, vtt, json)
OUTPUT_FORMAT=txt

# Language settings (en, fr, de, etc.)
LANGUAGE=en

# Speaker diarization settings
INCLUDE_DIARIZATION=false
DIARIZATION_MODEL=pyannote/speaker-diarization@2.1
HF_TOKEN=your_huggingface_token_here

# Processing settings
FORCE_CPU=true

# Cache settings
CACHE_ENABLED=true
CACHE_EXPIRATION=604800  # 7 days in seconds
MAX_CACHE_SIZE=10737418240  # 10GB in bytes